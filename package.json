{
  "name": "blog-preview-card-main",
  "version": "1.0.0",
  "description": "![Design preview for the Blog preview card coding challenge](./design/desktop-preview.jpg)",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel watch:sass devserver",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/syle.prefix.css",
    "compress:css": "sass css/style.prefix.css css/syle.css --syle=compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huz3y/blog-preview-card-main.git"
  },
  "author": "huz3y",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/huz3y/blog-preview-card-main/issues"
  },
  "homepage": "https://github.com/huz3y/blog-preview-card-main#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0",
    "sass": "^1.75.0"
  }
}
